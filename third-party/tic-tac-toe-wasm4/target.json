{
	"llvm-target":   "wasm32--wasi",
	"build-tags":    ["tinygo.wasm"],
	"goos":          "js",
	"goarch":        "wasm",
	"linker":        "wasm-ld",
	"libc":          "wasi-libc",
	"cflags": [
		"--target=wasm32--wasi",
		"--sysroot={root}/lib/wasi-libc/sysroot",
		"-Oz"
	],
	"ldflags": [
		"--allow-undefined",
		"--no-demangle",

        "--import-memory",
        "--initial-memory=65536",
        "--max-memory=65536",
        "--global-base=6560",
        "-zstack-size=2048",
        "--strip-all"
	],
	"emulator":      ["w4", "run"],
	"wasm-abi":      "js"
}
